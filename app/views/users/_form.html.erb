
<div class="px-4 py-20 mx-auto max-w-7xl">
  <%= link_to root_path, title: "Home Page", class: "flex items-center justify-start sm:justify-center" do %>
    <span class="sr-only">Simple Form</span>
  <% end %>
  <div class="w-full px-0 pt-5 pb-6 mx-auto mt-4 mb-0 space-y-4 bg-transparent border-0 border-gray-200 rounded-lg md:bg-white md:border sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 md:px-6 sm:mt-8 sm:mb-5">
    <h1 class="w-full mb-5 text-xl font-light text-left text-gray-800 sm:text-center">Create a new user</h1>
    <%= form_with(model: @user, id: "user_form", local: true, class: "pb-1 space-y-4") do |form| %>
      <div class="block">
        <%= form.label :first_name, class: "block mb-1 text-xs font-medium text-gray-700" %>
        <%= form.text_field :firstname, class: "form-input", placeholder: "Firstname", required: true %>
      </div>
      <div class="block">
        <%= form.label :last_name, class: "block mb-1 text-xs font-medium text-gray-700" %>
        <%= form.text_field :lastname, class: "form-input", placeholder: "Lastname", required: true %>
      </div>
      <div class="block">
        <%= form.label :phone, class: "block mb-1 text-xs font-medium text-gray-700" %>
        <%= form.telephone_field :phone, class: "form-input", placeholder: "Phone number", required: true %>
      </div>
      <%= form.hidden_field :latitude, id: "latitude" %>
      <%= form.hidden_field :longitude, id: "longitude" %>
      <%= form.submit "Create", class: "w-full px-3 py-2 text-white bg-purple-600 rounded-md focus:bg-purple-700 focus:outline-none" %>
    <% end %>
  </div>
</div>

<!-- Modal for Map -->
<div id="mapModal" class="hidden flex fixed z-50 inset-0 bg-gray-900 bg-opacity-50 items-center justify-center">
  <div class="bg-white rounded-lg overflow-hidden shadow-xl transform transition-all sm:max-w-lg sm:w-full">
    <div class="p-4">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Pick a Location</h3>
      <div id="map" style="height: 400px; width: 100%;"></div>
    </div>
    <div class="px-4 py-3 bg-gray-50 sm:px-6 sm:flex sm:flex-row-reverse">
      <button id="confirmLocation" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-green-600 text-base font-medium text-white">Confirm Location</button>
      <button id="cancelLocation" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700">Cancel</button>
    </div>
  </div>
</div>